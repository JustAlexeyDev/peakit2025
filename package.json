{
  "name": "peakit2025",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently -n server,mobile -c blue,green \"npm:dev:server\" \"npm:dev:mobile\"",
    "dev:server": "npm --prefix apps/server run dev",
    "dev:mobile": "npm --prefix apps/mobile run start",
    "build": "npm --prefix apps/server run build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  }
}

